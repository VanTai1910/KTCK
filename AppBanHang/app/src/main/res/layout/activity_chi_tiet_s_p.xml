<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.ChiTietSPActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toor_chitietsp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#56f437"
        app:title="Chi tiết sản phẩm" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_chitietsp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:src="@color/colorPrimaryDark" />

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tenspchitiet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="ten san pham chi tiet"
                android:textColor="#123"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_giaspchitiet"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="gia san pham chi tiet"
                android:textColor="#E91E63"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_chitiet"
                android:layout_width="90dp"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/spinner_ct"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btn_themchitiet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/boder_thongtinkhach"
                android:text="Thêm vào giỏ hàng"
                android:textAlignment="center"
                android:textColor="#56f437"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="#F5F7F8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Mô tả sản phẩm "
            android:textColor="#56f437"
            android:textSize="25sp"
            android:textStyle="bold" />
        <ScrollView
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:id="@+id/tv_motaspchitiet"/>
        </ScrollView>
    </LinearLayout>

</LinearLayout>